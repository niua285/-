}

.font-list {
  padding: 20rpx 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.font-item {
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1px solid #f0f0f0;
  transition: all 0.3s ease;
}

.font-item:last-child {
  border-bottom: none;
}

.font-item.active {
  color: #007AFF;
  background: #f8f9fa;
  border-radius: 12rpx;
}

.font-item:active {
  background: #f5f5f5;
}

.modal {
