<view class="container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="user-info" bindtap="editUserInfo">
      <image class="avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.svg'}}" mode="aspectFill"></image>
      <view class="user-details">
        <view class="nickname">{{userInfo.nickName || '未登录'}}</view>
        <view class="user-location" wx:if="{{userInfo.region}}">{{userInfo.region.join(' ')}}</view>
        <view class="user-location" wx:elif="{{userInfo.location}}">{{userInfo.location}}</view>
        <view class="login-btn" wx:if="{{!isLoggedIn}}" bindtap="login">点击登录</view>
        <view class="edit-tip" wx:else>点击修改头像和昵称</view>
      </view>
    </view>
  </view>

  <!-- 数据概览 -->
  <view class="overview-section">
    <view class="section-title">数据概览</view>
    <view class="overview-grid">
      <view class="overview-item">
        <text class="overview-value">{{totalDays}}</text>
        <text class="overview-label">工作天数</text>
      </view>
      <view class="overview-item">
        <text class="overview-value">¥{{totalEarnings}}</text>
        <text class="overview-label">总收入</text>
      </view>
      <view class="overview-item">
        <text class="overview-value">¥{{averageDaily}}</text>
        <text class="overview-label">日均收入</text>
      </view>
      <view class="overview-item">
        <text class="overview-value">¥{{averageHourly}}</text>
        <text class="overview-label">平均时薪</text>
      </view>
      <view class="overview-item">
        <text class="overview-value">¥{{averagePrice}}</text>
        <text class="overview-label">平均单价</text>
      </view>
    </view>
  </view>

  <!-- 平台统计 -->
  <view class="platform-section">
    <view class="section-title">平台统计</view>
    <view class="platform-list">
      <view class="platform-item" wx:for="{{platformStats}}" wx:key="platform">
        <view class="platform-info">
          <text class="platform-name">{{item.platform}}</text>
          <text class="platform-days">{{item.days}}天</text>
        </view>
        <view class="platform-earnings">
          <text class="earnings-value">¥{{item.earnings}}</text>
          <text class="earnings-average">日均¥{{item.average}}</text>
          <text class="earnings-detail">时薪¥{{item.hourly}} | 单价¥{{item.price}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 设置列表 -->
  <view class="settings-section">
    <view class="section-title">设置</view>
    <view class="settings-list">
      <view class="settings-item" bindtap="editProfile">
        <text class="settings-label">编辑资料</text>
        <text class="settings-arrow">></text>
      </view>
      <view class="settings-item" bindtap="clearData">
        <text class="settings-label">清除数据</text>
        <text class="settings-arrow">></text>
      </view>
      <view class="settings-item" bindtap="showAbout">
        <text class="settings-label">关于我们</text>
        <text class="settings-arrow">></text>
      </view>
    </view>
  </view>
</view> 