.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-card {
  background: #fff;
  padding: 40rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-location {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.login-btn {
  display: inline-block;
  padding: 10rpx 30rpx;
  background: #1296db;
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
}

.edit-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

.overview-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.overview-item {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  text-align: center;
}

.overview-value {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #666;
}

.platform-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.platform-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.platform-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.platform-info {
  display: flex;
  flex-direction: column;
}

.platform-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.platform-days {
  font-size: 24rpx;
  color: #999;
}

.platform-earnings {
  text-align: right;
}

.earnings-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  display: block;
  margin-bottom: 4rpx;
}

.earnings-average {
  font-size: 24rpx;
  color: #999;
}

.earnings-detail {
  font-size: 22rpx;
  color: #999;
  display: block;
  margin-top: 4rpx;
}

.settings-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.settings-list {
  display: flex;
  flex-direction: column;
  gap: 1rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  background: #f8f8f8;
}

.settings-item:first-child {
  border-radius: 8rpx 8rpx 0 0;
}

.settings-item:last-child {
  border-radius: 0 0 8rpx 8rpx;
}

.settings-label {
  font-size: 28rpx;
  color: #333;
}

.settings-arrow {
  font-size: 28rpx;
  color: #999;
} 