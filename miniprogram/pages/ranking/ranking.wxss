.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.platform-selector {
  background: #fff;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f0f0f0;
}

.picker {
  color: #333;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker::after {
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-right: 4rpx solid #666;
  border-bottom: 4rpx solid #666;
  transform: rotate(45deg);
  margin-left: 10rpx;
}

.dimension-selector {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f0f0f0;
}

.dimension-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
  font-weight: 500;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.dimension-item.active {
  color: #1296db;
  font-weight: bold;
}

.dimension-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: #1296db;
  border-radius: 3rpx;
}

.location-selector {
  background: #fff;
  padding: 24rpx 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 2rpx solid #f0f0f0;
}

.location-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.location-icon {
  font-size: 32rpx;
  color: #666;
  margin-left: 10rpx;
}

.ranking-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.ranking-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background: #fff;
  margin-bottom: 2rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.ranking-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.rank-number {
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #666;
  margin-right: 20rpx;
  background: #f5f5f5;
  border-radius: 50%;
}

.rank-number.top-1 {
  color: #fff;
  background: #FFD700;
}

.rank-number.top-2 {
  color: #fff;
  background: #C0C0C0;
}

.rank-number.top-3 {
  color: #fff;
  background: #CD7F32;
}

.user-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: block;
}

.location-platform {
  display: flex;
  gap: 16rpx;
}

.location, .platform {
  font-size: 24rpx;
  color: #666;
  background: #f5f5f5;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.platform {
  background: #e6f7ff;
  color: #1296db;
}

.platform.unknown {
  background: #f5f5f5;
  color: #999;
}

.location {
  background: #f5f5f5;
  color: #666;
}

.salary-info {
  text-align: right;
  min-width: 160rpx;
}

.salary {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: bold;
  display: block;
  margin-bottom: 8rpx;
}

.total-days {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.load-more {
  text-align: center;
  padding: 20rpx;
}

.load-more-btn {
  display: inline-block;
  padding: 10rpx 40rpx;
  font-size: 28rpx;
  color: #1296db;
  background: #fff;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 用户排名提醒样式 */
.user-rank-reminder {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(0, 0, 0, 0.8);
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 28rpx;
  z-index: 100;
}

.reminder-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.rank-text {
  font-weight: bold;
}

.salary-text {
  color: #4CAF50;
}

/* 首次访问引导界面 */
.first-visit-guide {
  padding: 40rpx;
  background-color: #fff;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.guide-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.guide-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 60rpx;
}

.guide-steps {
  width: 100%;
  margin-bottom: 60rpx;
}

.guide-step {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  position: relative;
}

.guide-step.completed {
  background: #e8f5e9;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.step-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.step-btn {
  width: 200rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #007AFF;
  color: #fff;
  font-size: 28rpx;
  border-radius: 32rpx;
  padding: 0;
}

.step-status {
  font-size: 28rpx;
  color: #4CAF50;
}

.complete-btn {
  width: 80%;
  height: 88rpx;
  line-height: 88rpx;
  background: #007AFF;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: auto;
} 