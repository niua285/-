.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-card {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  margin-right: 20rpx;
}

.nickname {
  display: block;
  margin-top: 10px;
  font-size: 16px;
}

.login-btn {
  margin: 20px;
  background: #07c160;
  color: white;
}

.overview-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.overview-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.overview-item {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 12rpx;
  text-align: center;
}

.overview-value {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #999;
}

.trend-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.trend-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.trend-chart {
  width: 100%;
  height: 400rpx;
}

.platform-section {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.platform-title {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.platform-list {
  margin-top: 20rpx;
}

.platform-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.platform-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.platform-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.platform-days {
  font-size: 24rpx;
  color: #666;
}

.platform-earnings {
  text-align: right;
}

.earnings-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  display: block;
}

.earnings-average {
  font-size: 24rpx;
  color: #666;
  margin-top: 4rpx;
  display: block;
} 