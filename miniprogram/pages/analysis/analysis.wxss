.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.dimension-selector {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 100;
}

.dimension-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
  cursor: pointer;
  user-select: none;
  -webkit-tap-highlight-color: transparent;
}

.dimension-item.active {
  color: #1296db;
  font-weight: bold;
  transform: scale(1.05);
}

.dimension-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1296db;
  border-radius: 2rpx;
  transition: all 0.3s ease;
}

.dimension-item:active {
  opacity: 0.7;
  transform: scale(0.98);
}

.chart-container {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  height: 60vh;
  min-height: 400rpx;
  max-height: 800rpx;
  overflow: hidden;
  transition: all 0.3s ease;
}

.trend-chart {
  width: 100%;
  height: 100%;
  transition: all 0.3s ease;
}

.data-tooltip {
  position: absolute;
  background: rgba(18, 150, 219, 0.9);
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.2);
  z-index: 100;
  transform: translate(-50%, -50%);
  pointer-events: none;
}

.tooltip-date {
  font-size: 22rpx;
  opacity: 0.9;
  margin-bottom: 4rpx;
}

.tooltip-value {
  font-size: 28rpx;
  font-weight: bold;
}

.empty-chart {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fff;
}

.empty-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.analysis-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.analysis-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.analysis-item {
  background: #f8f8f8;
  padding: 20rpx;
  border-radius: 8rpx;
  text-align: center;
}

.analysis-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.analysis-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.suggestion-section {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.suggestion-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.suggestion-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.suggestion-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.suggestion-content {
  flex: 1;
}

.suggestion-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.suggestion-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

.empty-suggestion {
  padding: 40rpx 0;
  text-align: center;
} 