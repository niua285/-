.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.platform-selector {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.picker {
  color: #333;
  font-size: 28rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin: 30rpx 0 20rpx;
}

.time-slots {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.time-slot-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  gap: 20rpx;
}

.time-slot-item:last-child {
  border-bottom: none;
}

.time-inputs {
  display: flex;
  align-items: center;
  width: 100%;
  margin-bottom: 20rpx;
}

.time-picker {
  padding: 10rpx 20rpx;
  background: #fff;
  border-radius: 6rpx;
  font-size: 28rpx;
  color: #333;
  min-width: 160rpx;
}

.separator {
  margin: 0 20rpx;
  color: #999;
}

.input-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
  width: 100%;
}

.income-input, .orders-input {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  flex: 1;
}

.currency {
  color: #666;
  font-size: 28rpx;
  margin-right: 8rpx;
}

.income-input input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

.orders-input {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
  background: #fff;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  flex: 0.8;
}

.orders-input input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff4d4f;
  margin-left: auto;
}

.add-btn {
  text-align: center;
  color: #1296db;
  font-size: 28rpx;
  padding: 20rpx;
  border-top: 1rpx dashed #eee;
  margin-top: 20rpx;
}

.statistics {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-item {
  text-align: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 10rpx;
}

.stat-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.save-section {
  margin: 30rpx 0;
  padding: 0 20rpx;
}

.save-btn {
  background: #1296db;
  color: #fff;
  border-radius: 8rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.save-btn:active {
  opacity: 0.8;
}

.date-selector {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.history-section {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #4CAF50;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.history-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
}

.history-date {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.history-platform {
  font-size: 26rpx;
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.history-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.history-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.history-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
}

.history-actions button {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 4rpx;
  border: none;
  background: none;
  line-height: 1.5;
}

.history-actions button::after {
  border: none;
}

.edit-btn {
  color: #4CAF50;
  background: rgba(76, 175, 80, 0.1);
}

.delete-btn {
  color: #ff4d4f;
  background: rgba(255, 77, 79, 0.1);
}

/* 基础表单样式 */
.form-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 120rpx;
  color: #333;
  font-size: 28rpx;
}

.picker {
  flex: 1;
  color: #666;
  font-size: 28rpx;
}

/* 时间段列表样式 */
.time-slots-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
