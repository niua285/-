}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  display: flex;
  align-items: center;
  color: #1296db;
  font-size: 28rpx;
}

.add-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}

.time-slots-list {
  margin-top: 20rpx;
}

.time-slot-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.time-inputs {
  display: flex;
  align-items: center;
  flex: 1;
}

.time-picker {
  padding: 10rpx 20rpx;
  background: #fff;
  border-radius: 6rpx;
  font-size: 28rpx;
  color: #333;
}

.separator {
  margin: 0 20rpx;
  color: #999;
}

.income-input {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
  background: #fff;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
}

.currency {
  color: #666;
  font-size: 28rpx;
  margin-right: 8rpx;
}

.income-input input {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
}

.delete-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff4d4f;
}

.delete-icon {
  font-size: 40rpx;
  line-height: 1;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  color: #999;
  font-size: 28rpx;
}

/* 计算结果样式 */
.result-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
}

.result-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.result-item:last-child {
  border-bottom: none;
}

.result-label {
  color: #666;
  font-size: 28rpx;
}

.result-value {
  color: #333;
  font-size: 32rpx;
  font-weight: bold;
}

.high-rate {
  color: #52c41a;
}

.low-rate {
  color: #ff4d4f;
}

.orders-input {
  display: flex;
  align-items: center;
  margin: 0 20rpx;
  background: #fff;
  border-radius: 6rpx;
  padding: 10rpx 20rpx;
  flex: 0.8;
}

.orders-input input {
  width: 100%;
  font-size: 28rpx;
  color: #333;
}

/* 数据展示区域样式 */
.data-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.data-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
}

.data-item {
  background: #f8f9fa;
  padding: 16rpx;
  border-radius: 8rpx;
  text-align: center;
}

.data-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.data-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.data-value.income {
  color: #4CAF50;
  font-weight: 600;
}

.data-value.orders {
  color: #1296db;
  font-weight: 600;
}

.picker-container {
  display: flex;
  align-items: center;
  gap: 10px;
}

.apply-industry-btn {
  font-size: 12px;
  color: #1890ff;
  padding: 4px 8px;
  border: 1px solid #1890ff;
  border-radius: 4px;
  background: #fff;
}

.apply-industry-btn:active {
  opacity: 0.8;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.modal-body {
  padding: 30rpx;
}

.modal-tips {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.modal-tips text {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.modal-footer {
  padding: 20rpx;
  border-top: 1px solid #eee;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.btn-cancel {
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
  border: none;
  padding: 10rpx 30rpx;
  border-radius: 6rpx;
}

.btn-confirm {
  font-size: 28rpx;
  color: #fff;
  background: #1890ff;
  border: none;
  padding: 10rpx 30rpx;
  border-radius: 6rpx;
}

.textarea {
  width: 100%;
  height: 160rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.history-edit-form {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.history-edit-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.history-edit-item:last-child {
  margin-bottom: 0;
}

.history-edit-label {
  width: 120rpx;
  font-size: 28rpx;
  color: #333;
}

.history-edit-picker {
  flex: 1;
  padding: 10rpx 20rpx;
  background: #fff;
  border-radius: 6rpx;
  font-size: 28rpx;
  color: #333;
} 